# Psi-freq Scalper Configuration Example
# Copy this file to .env and fill in your actual values

# Trading Mode: paper or live
TRADING_MODE=paper

# Exchange API Keys - Hyperliquid
HYPERLIQUID_API_KEY=your_hyperliquid_api_key
HYPERLIQUID_API_SECRET=your_hyperliquid_api_secret
HYPERLIQUID_TESTNET=true

# Exchange API Keys - Bitget
BITGET_API_KEY=your_bitget_api_key
BITGET_API_SECRET=your_bitget_api_secret
BITGET_PASSPHRASE=your_bitget_passphrase
BITGET_TESTNET=true

# Trading Parameters
DEFAULT_LEVERAGE=5
MAX_LEVERAGE=10
PYRAMIDING_LEVELS=3
POSITION_SIZE_PERCENT=2.0
MIN_POSITION_SIZE=10.0

# Risk Management
STOP_LOSS_PERCENT=1.5
TAKE_PROFIT_PERCENT=3.0
TRAILING_STOP_PERCENT=0.5
MAX_DAILY_LOSS_PERCENT=5.0

# Psi-frequency Parameters
PSI_FREQ_THRESHOLD=0.7
PSI_TRAJECTORY_WINDOW=20
PSI_SENSITIVITY=1.5

# Timeframes for Multi-timeframe Analysis (in minutes)
TIMEFRAMES=1,5,15,30,60,240

# ML Model Settings
MODEL_UPDATE_INTERVAL=3600
FEATURE_WINDOW=100
PREDICTION_THRESHOLD=0.65

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/psi_freq_scalper.log
